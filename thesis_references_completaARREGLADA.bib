  keywords = {Animals,central pattern generator,Central Pattern Generators,CPG,human,Humans,locomotion,Locomotion,modelling,Models Neurological,neuromodulation,spinal cord,Spinal Cord,Spinal Cord Injuries,spinal cord injury,spinal cord stimulation}
