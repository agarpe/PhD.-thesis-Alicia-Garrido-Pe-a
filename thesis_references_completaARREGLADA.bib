  langid = {english},
  pmid = {12574485},
  keywords = {Adult,Brain,Cerebellum,Fingers,Gyrus Cinguli,Humans,Magnetic Resonance Imaging,Male,Motor Activity,Motor Cortex,Nerve Net,Parietal Lobe,Temporal Lobe,Time Perception}
