@article{staras_electrophysiological_1999,
	title = {Electrophysiological and {Behavioral} {Analysis} of {Lip} {Touch} as a {Component} of the {Food} {Stimulus} in the {Snail} {\textbackslash}textlessi{\textbackslash}{textgreaterLymnaea}{\textbackslash}textless/i{\textbackslash}textgreater},
