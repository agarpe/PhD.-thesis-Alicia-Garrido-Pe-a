	urldate = {2021-01-12},
	journal = {Journal of Neurophysiology},
	author = {Gunaratne, Charuni A. and Sakurai, Akira and Katz, Paul S.},
	month = aug,
	year = {2017},
	pmid = {28539397},
	note = {Publisher: American Physiological Society},
	keywords = {Evolution, Homology, Homoplasy, Microcircuitry, Nudibranch mollusk},
	pages = {1123--1132},
	file = {PDF:/home/agarpe/Zotero/storage/DZGU4YKI/full-text.pdf:application/pdf},
}

