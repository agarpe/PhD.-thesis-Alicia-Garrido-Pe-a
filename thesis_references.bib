	author = {Elliott, C. J. and Benjamin, P. R.},
	month = dec,
	year = {1985},
	pmid = {4087040},
	keywords = {Lymnaea, Action Potentials, Animals, Synapses, Ganglia, Neural Pathways, Interneurons, Electric Stimulation, Feeding Behavior, Cheek},
	pages = {1396--1411},
}

@article{rose_interneuronal_1981-1,
