	year = {2014},
	pmid = {24769169},
	note = {ISBN: 0165-0270},
	keywords = {Active Electrode Compensation, Cellular neurobiology, Closed-loop, Command-line interface, Current clamp, Dynamic clamp, Electrophysiology, Experimental control, Hybrid experiments, Neuroinformatics, Real-time computing, Scripted electrophysiology},
