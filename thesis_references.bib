	journal = {Communications Biology 2019 2:1},
	author = {Crossley, Michael and Lorenzetti, Frederick D. and Naskar, Souvik and O’Shea, Michael and Kemenes, György and Benjamin, Paul R. and Kemenes, Ildikó},
	month = jun,
	year = {2019},
	pmid = {31263786},
	note = {Publisher: Nature Publishing Group},
	keywords = {Cellular neuroscience, Learning and memory},
	pages = {1--11},
	file = {PDF:/home/agarpe/Zotero/storage/CAPJAE4K/full-text.pdf:application/pdf},
}

@article{crossley_central_2018,
