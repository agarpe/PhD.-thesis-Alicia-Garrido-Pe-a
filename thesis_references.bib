@article{vehovszky_activation_2001-2,
	title = {Activation and {Reconfiguration} of {Fictive} {Feeding} by the {OctopamineContaining} {Modulatory} {OC} {Interneurons} in the {Snail} {\textbackslash}textlessi{\textbackslash}{textgreaterLymnaea}{\textbackslash}textless/i{\textbackslash}textgreater},
