@article{siegle_neural_2015,
	title = {Neural ensemble communities: open-source approaches to hardware for large-scale electrophysiology},
	volume = {32},
	issn = {0959-4388},
	url = {https://www.sciencedirect.com/science/article/pii/S0959438814002268},
